@model ApplicationUser

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserName" /> @* solo si Name es el UserName *@

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Editar Usuario</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Nombre</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="Email">Correo</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>

            @{
                var enabledAux = new List<SelectListItem>
            {
            new SelectListItem { Text = "Habilitado", Value = "1" },
            new SelectListItem { Text = "Deshabilitado", Value = "0" }
            };
            }

            <label asp-for="IsEnabled">Estatus</label>
            <select asp-for="IsEnabled" asp-items="enabledAux" class="form-select">
                <option disabled>--- Estatus ---</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Editar</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
