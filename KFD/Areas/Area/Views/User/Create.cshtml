@using KFD.Models
@model User

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2> Creacion de Usuario</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">Nombre</label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

			<label asp-for="Password"></label>
			<input asp-for="Password" type="text" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>

			@{
				var roles = new List<SelectListItem>
			{
			new SelectListItem { Text = "Adminstrador", Value = "Administrator" },
			new SelectListItem { Text = "Cliente", Value = "Client" },
			new SelectListItem { Text = "Chef", Value = "Chef" }
			};
			}

			<div class="mb-3">
				<label asp-for="Rol"></label>
				<select asp-for="Rol" asp-items="roles" class="form-select">
					<option disabled selected>--- Seleccione un Rol ---</option>
				</select>
			</div>

			<label asp-for="Email">Correo</label>
			<input asp-for="Email" type="text" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>

			<label asp-for="Address">Direccion</label>
			<input asp-for="Address" type="text" class="form-control" />
			<span asp-validation-for="Address" class="text-danger"></span>

			@{
				var var = new List<SelectListItem>
			{
			new SelectListItem { Text = "Habilitado", Value = "1" },
			new SelectListItem { Text = "Deshabilitado", Value = "0" }
			};
			}

			<div class="mb-3">
				<label asp-for="IsEnabled">Estado</label>
				<select asp-for="IsEnabled" asp-items="var" class="form-select">
					<option disabled selected>--- Estatus ---</option>
				</select>
			</div>

		</div>
		<button type="submit" class="btn btn-primary">Crear</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary">Volver</a>
	</div>
</form>

@section Scripts{
@{
		<partial name="_ValidationScriptsPartial" />
}

}
