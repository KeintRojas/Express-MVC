<partial name="_Notifications" />

<div class="container">
    <div class="row pt-4 mb-3">
        <div class="col">
            <h2 class="fw-bold">Lista de Pedidos</h2>
        </div>
    </div>

    <div class="row align-items-end mb-4">
        <div class="col-md-3">
            <label for="startDate" class="form-label">Desde:</label>
            <input type="date" id="startDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="endDate" class="form-label">Hasta:</label>
            <input type="date" id="endDate" class="form-control" />
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button id="filterBtn" class="btn btn-primary mt-3 mt-md-0 w-100">Filtrar</button>
            <button id="resetBtn" class="btn btn-secondary mt-3 mt-md-0 w-100">Limpiar</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="tblData">
            <thead class="table-light">
                <tr>
                    <th>Cliente</th>
                    <th>Usuario</th>
                    <th>Descripción</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script src="~/js/order.js"></script>
